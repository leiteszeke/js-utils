{
  "name": "lz-js-utils",
  "version": "1.1.0",
  "description": "Library with utils function to use across different JS projects.",
  "main": "build/index.js",
  "scripts": {
    "build:prod": "webpack -p --config webpack.prod.js",
    "build:dev": "webpack -w --config webpack.dev.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline",
    "lint": "tslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "tslint ./src/**/*.{js,jsx,ts,tsx} --fix",
    "prettier": "prettier --check ./src/**/*.{js,jsx,ts,tsx}",
    "prettier:fix": "prettier --write ./src/**/*.{js,jsx,ts,tsx}",
    "test": "jest --watch"
  },
  "contributors": [
    {
      "name": "Ezequiel Leites",
      "email": "ezequiel@leites.dev"
    },
    {
      "name": "Nicolas Villalonga",
      "email": "nicovillalonga90@gmail.com"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-watch": "^6.0.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "ts-loader": "^6.0.4",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-standard": "^8.0.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7"
  }
}
